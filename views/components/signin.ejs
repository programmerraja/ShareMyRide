
<section class="signin_container">
 
    <form novalidate="" class="container form_container" action="/signin" method="post">
      
           <div class="form-group">
              <label class="form-label"  for="formBasicEmail">Email address</label>
              <input placeholder="Enter email" type="email" id="formBasicEmail" class="form-control" name="email">
          </div>

           <div class="form-group">
              <label class="form-label" for="formBasicPassword">Password</label>
              <input placeholder="Password" required="" type="password" id="formBasicPassword" class="form-control" name="password">
          </div>

          <input type="submit" class="btn signin_button" value="Log in">
           <% if((typeof error_msg==="undefined")) {%>
                <div class="error_msg"><span></span></div>
                <%}else {%>
                <div class="error_msg"><span><%= error_msg%></span></div>
                <%}%>
          <div class="mt-2 form-group">
              <small class="text-primary">Forget password?</small>
              <small class="text">New to V-Share ?<a class="nav-link d-inline p-0" href="/signup">Create an account</a></small>
          </div>  
    </form>

  </section>