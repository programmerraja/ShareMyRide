	<section class="user_container">
        <form novalidate="" class="container form_container-wrapper" method="post" action="/user/profile">
        <div class="form_container-in">
          <div class="form_container-in-left">
              <div class="form-group">
                <label class="form-label" for="formBasicName">Name</label>
                <input value="<%=user.name %>" placeholder="Enter Name"  type="text" id="formBasicName" class="form-control" name="name" required>
              </div>

              <div class="form-group">
                <label class="form-label" for="formBasicEmail">Email address</label>
                <input value="<%=user.email %>" placeholder="Enter email" required type="email" id="formBasicEmail" class="form-control" name="email" required>
              </div>
              
              <div class="form-group">
                <label class="form-label" for="formBasicPassword">Old Password</label>
                <input  placeholder="Old Password"  type="password" id="formBasicPassword" class="form-control" name="password" required>
              </div>

              <div class="form-group">
                <label class="form-label" for="formBasicPassword">New Password<span class="text-muted">(optional)</span></label> 
                <input  placeholder="New password" type="password" id="formBasicPassword" class="form-control" name="new_password">
              </div>

              <div class="form-group">
                <label class="form-label" for="formBasicPhoneno">Gender</label>
                <select  id="Gender" name="gender" >
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                </select>
              </div>
          </div>
          <div class="form_container-in-right">
              <div class="form-group">
                <label class="form-label" for="formBasicPhoneno">Phone No</label>
                <input value="<%=user.phoneno %>" placeholder="Phone No" required type="number" id="formBasicPhoneno" class="form-control" name="phoneno" >
              </div>

              <div class="form-group">
                <label class="form-label" for="formBasicPhoneno">Whatsapp No</label>
                <input value="<%=user.whatsappno %>" placeholder="Whatsapp No" required type="number" id="formBasicPhoneno" class="form-control" name="whatsappno">
              </div>

               <div class="form-group">
                <label class="form-label" for="formBasicPhoneno">License No</label>
                <input value="<%=user.licenseno %>" placeholder="License No" required type="text" id="formBasicPhoneno" class="form-control" name="licenseno">
              </div>

               <div class="form-group">
                <label class="form-label" for="formBasicPhoneno">Driving Expereince</label>
                <input value="<%=user.drivingexpereince %>" placeholder="Driving Expereince" required type="number" id="formBasicPhoneno" class="form-control" name="drivingexpereince">
              </div>
              
              
            </div>
          </div>
          <div class="form-group form_container-in-bottom">
                <label class="form-label" for="formBasicPhoneno">Mini bio about yourself
                </label>
               <textarea class="form-control" name="bio" maxlength="500"><%=user.bio %></textarea>
              </div>
              <input type="submit" class="btn create_button" value="Update Account">
              <% if((typeof error_msg==="undefined")) {%>
                <div class="error_msg"><span></span></div>
                <%}else {%>
                <div class="error_msg"><span><%= error_msg%></span></div>
                <%}%>
        </form>
  </section>
